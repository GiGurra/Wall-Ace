<Module>

	<Enums>
	</Enums>

	<Types>

		<!-- ********** WORLD ********** -->
    
        <AreaIndex>
            <ix type="int"/>
            <iy type="int"/>
        </AreaIndex>

        <World>
            <areas type="map[AreaIndex, Area]"/>
        </World>

        <Area>
            <components type="ComponentStore"/>
            <entities type="list[Entity]"/>
        </Area>

        <Entity>
            <id type="int"/>
        </Entity>



		<!-- ********** ANIMATION ********** -->

        <AnimationStore>
            <animations type="map[string, Animation]">{}</animations>
        </AnimationStore>

        <Animation>
            <name type="string"/>
            <imageFile type="string"/>
            <frames type="list[AnimationFrame]"/>
        </Animation>

        <AnimationFrame>
            <x type="float"/>
            <y type="float"/>
            <width type="float"/>
            <height type="float"/>
        </AnimationFrame>



		<!-- ********** EFFECTS ********** -->

        <EffectType />

        <DamageEffect extends="EffectType" >
            <amount type="int"/>
        </DamageEffect>



		<!-- ********** COLLISIONS ********** -->

        <CollisionType />

        <ElasticCollision extends="CollisionType"/>

        <DamagingCollission extends="CollisionType">
            <damage type="int"/>
        </DamagingCollission>
        


		<!-- ********** COMPONENTS ********** -->

        <ComponentStore>
            <geometrics type="list[GeometricComponent]"/>
            <collisions type="list[CollisionComponent]"/>
            <graphics type="list[GraphicsComponent]"/>
            <stats type="list[StatsComponent]"/>
        </ComponentStore>

        <GeometricComponent>
            <x type="double">0.0</x>
            <y type="double">0.0</y>
            <width type="double">0.0</width>
            <height type="double">0.0</height>
        </GeometricComponent>

		<CollisionComponent>
            <mass type="double">1.0</mass>
            <fixed type="bool">false</fixed>
            <collisionType type="CollisionType"/>
		</CollisionComponent>

        <GraphicsComponent>
            <idleAnimation type="string">default_animation.json</idleAnimation>
            <action2animation type="map[string, string]">{}</action2animation>
            <currentAction type="string"></currentAction>
            <animationTime type="float">0.0</animationTime>
        </GraphicsComponent>     

        <StatsComponent>
            <health type="int">10</health>
            <endurance type="int">10</endurance>
            <experience type="int">0</experience>
        </StatsComponent>



		<!-- ********** MESSAGES ********** -->

		<GameStateMessage extends="Message" />

        <AuthorizedStateMessage extends="GameStateMessage"/>

        <PlayerInputsMessage extends="GameStateMessage"/>


	</Types>

</Module>
