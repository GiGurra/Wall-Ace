<Module>

	<Enums>
	</Enums>

	<Types>

		<!-- ********** WORLD ********** -->

		<AreaIndex>
			<ix type="int" />
			<iy type="int" />
		</AreaIndex>

		<World>
			<areas type="map[AreaIndex, Area]" />
		</World>

		<Area>
			<components type="ComponentStore" />
			<entities type="list[Entity]" />
		</Area>

		<Entity>
			<id type="int" />
		</Entity>

		<WorldSnapshot>
			<world type="World" />
			<delta type="string" />
		</WorldSnapshot>


		<!-- ********** ANIMATION ********** -->

		<AnimationStore>
			<animations type="map[string, Animation]">{}</animations>
		</AnimationStore>

		<Animation>
			<name type="string" />
			<imageFile type="string" />
			<frames type="list[AnimationFrame]" />
		</Animation>

		<AnimationFrame>
			<x type="float" />
			<y type="float" />
			<width type="float" />
			<height type="float" />
		</AnimationFrame>



		<!-- ********** EFFECTS ********** -->

		<WorldEffect />

		<Explosion extends="WorldEffect">
			<radius type="float" />
			<damage type="int" />
		</Explosion>




		<!-- ********** COMPONENTS ********** -->

		<ComponentStore>
			<geometrics type="list[GeometricComponent]" />
			<collisions type="list[CollisionComponent]" />
			<graphics type="list[GraphicsComponent]" />
			<stats type="list[StatsComponent]" />
		</ComponentStore>

		<GeometricComponent>
			<x type="double">0.0</x>
			<y type="double">0.0</y>
			<width type="double">0.0</width>
			<height type="double">0.0</height>
		</GeometricComponent>

		<CollisionComponent>
			<mass type="float">1.0f</mass>
			<elasticity type="float">1.0f</elasticity>
			<fixed type="bool">false</fixed>
			<autoremove type="bool">false</autoremove>
			<effects type="list[WorldEffect]">[]</effects>
		</CollisionComponent>

		<GraphicsComponent>
			<idleAnimation type="string" />
			<action2animation type="map[string, string]">{}</action2animation>
			<currentAction type="string"></currentAction>
			<animationTime type="float">0.0</animationTime>
		</GraphicsComponent>

		<StatsComponent>
			<health type="int">10</health>
			<endurance type="int">10</endurance>
			<experience type="int">0</experience>
		</StatsComponent>



		<!-- ********** MESSAGES ********** -->

		<GameStateMessage extends="Message">
			<from type="string" />
			<iGameStep type="int" />
		</GameStateMessage>

		<ServerStepMessage extends="GameStateMessage">
			<snapshot type="WorldSnapshot" />
			<playerInputs type="list[PlayerInputMessage]" />
		</ServerStepMessage>


	</Types>

</Module>
